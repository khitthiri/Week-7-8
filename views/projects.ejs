<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/styles.css">
    <title><%= typeof title !== 'undefined' ? title : "Projects" %></title> <!-- Dynamic title, defaults to "Projects" -->
</head>
<body>
    <section id="projects_showcase" role="region" aria-labelledby="projects_heading">
        <h1 id="projects_heading">Projects Showcase</h1>

        <!-- Dynamically render projects list if passed from server -->
        <% projects.forEach(project => { %>
            <div id="<%= project.section_id %>" class="project-card">
                <img id="<%= project.img_id %>" src="<%= project.img_src %>" alt="<%= project.img_alt %>">
                <h3 id="<%= project.title_id %>"><%= project.title %></h3>
                <p><%= project.description %></p>
                <a href="<%= project.link %>" target="_blank">View Project</a>
            </div>
        <% }); %>
    </section>
</body>
</html>